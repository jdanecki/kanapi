#Text only apps, libs 
#BBS is required to compile below targets

ifeq (x$(KANAPI_TOP),x)
BASE=
else
BASE=$(KANAPI_TOP)/
endif

include $(BASE)../scripts/Makefile.common

cli: t_compression t_system t_devel vim bc sound 

