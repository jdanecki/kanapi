#targets to prepare SBS image

ifeq (x$(KANAPI_TOP),x)
BASE=
else
BASE=$(KANAPI_TOP)/
endif

include $(BASE)../scripts/Makefile.common

sbs: $(COMPILERS) rootfs file busybox bash make openssl curl

linux-headers:
	@$(RUN_TARGET)

glibc: linux-headers
	@$(RUN_TARGET)

cross_gcc: glibc
	@$(RUN_TARGET)

gmp:
	@$(RUN_TARGET)

mpfr: gmp
	@$(RUN_TARGET)

mpc: mpfr
	@$(RUN_TARGET)

binutils: mpc
	@$(RUN_TARGET)

gcc: binutils
	@$(RUN_TARGET)

zlib:
	@$(RUN_TARGET)

libffi:
	@$(RUN_TARGET)

glib: libffi zlib
	@$(RUN_TARGET)

pkg-config: glib
	@$(RUN_TARGET)

rootfs: pkg-config
	@$(RUN_TARGET)

file:
	@$(RUN_TARGET)

busybox:
	@$(RUN_TARGET)

bash:
	@$(RUN_TARGET)

make:
	@$(RUN_TARGET)

openssl: 
	@$(RUN_TARGET)

libgpg-error:
	@$(RUN_TARGET)

libgcrypt: libgpg-error
	@$(RUN_TARGET)

libssh2: libgcrypt
	@$(RUN_TARGET)

curl: libssh2
	@$(RUN_TARGET)

