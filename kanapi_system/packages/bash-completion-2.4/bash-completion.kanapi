PACKAGE_NAME=bash-completion
VER=2.4
URL="https://github.com/scop/bash-completion/releases/download/${VER}"
EXT=tar.xz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
