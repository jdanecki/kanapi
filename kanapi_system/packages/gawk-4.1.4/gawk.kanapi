PACKAGE_NAME=gawk
VER=4.1.4
URL="GNU"
EXT=tar.xz
#build depends on

LIB_DEPENDS="ncurses"

. ../settings

export LDFLAGS="-L${KANAPI_BASE}/readline-${readline_ver}/lib -lreadline ${LDFLAGS}"

pkg_configure_target() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --with-readline=${KANAPI_BASE}/readline-${readline_ver} \
		--disable-nls
}

pkg_install() {
	pkg_install_make && pkg_install_bin_all && \
	rm -rf ${PREFIX}/share/{man,info}
}

