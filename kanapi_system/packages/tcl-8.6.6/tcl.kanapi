PACKAGE_NAME=tcl
VER=8.6.6
URL="http://prdownloads.sourceforge.net/tcl"
EXT=tar.gz
#build depends on
. ../settings

pkg_download() {
	PACKAGE_VER="${PACKAGE_NAME}${VER}-src"
	PACKAGE_FILENAME=${PACKAGE_VER}.${EXT}
	PACKAGE_PATH=${PACKAGE_FILENAME}
	
	pkg_curl
}

pkg_prepare() {
	if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ] 
	then 
		echo "$PACKAGE_NAME: already prepared"
	else
		tar -xzf ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}${VER}-src.${EXT} -C ${KANAPI_BUILD_SRC}
		/bin/date > ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
	fi
	${LN_SNF} ${PACKAGE_NAME}${VER} ${PACKAGE_SRCDIR}
}


pkg_configure() {	
	${PACKAGE_SRCDIR}/unix/configure --prefix=$PREFIX 
}

pkg_install() {
	pkg_install_pc_all && pkg_install_bin_all && pkg_install_libs && ${MAKE} -j ${MAKE_JOBS} install-private-headers
}

