PACKAGE_NAME=audiofile
VER=0.3.6
URL="http://ftp.acc.umu.se/pub/GNOME/sources/audiofile/0.3"
EXT=tar.xz
#build depends on

LIB_DEPENDS="alsa"

. ../settings

if [ -n "${PKG_CONFIG}" ]
then
	export CFLAGS="${CFLAGS} -I`${PKG_CONFIG} --variable=includedir alsa`"
fi

export LIBS="-lm -lstdc++ -lpthread"
export CXXFLAGS="${CFLAGS}"

pkg_install() {
	pkg_install_all
}

