PACKAGE_NAME=yajl
VER=2.1.0
URL=" http://github.com/lloyd/yajl/tarball/2.1.0"
EXT=tar.gz
#build depends on
. ../settings

pkg_download() {
	PACKAGE_LINK=${URL}
	pkg_curl
}

pkg_prepare() {
	pkg_tar_gz
	ln -svf ${KANAPI_BUILD_SRC}/lloyd-yajl-66cb08c ${KANAPI_BUILD_SRC}/${PACKAGE_VER}
}

pkg_configure() {
	rm -rf build
	mkdir build
	cp -ar ${PACKAGE_SRCDIR}/* build
	cd build
	${PACKAGE_SRCDIR}/configure -p $PREFIX
}

pkg_build() {
	cd build
	make -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
	cd build
	pkg_install_pc_share
	pkg_install_bin_all
	pkg_install_libs
}

