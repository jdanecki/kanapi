PACKAGE_NAME=Audacity
VER=2.2.2
URL="https://github.com/audacity/audacity/archive"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	${LN_SNF} audacity-${PACKAGE_NAME}-${VER} ${PACKAGE_SRCDIR}
	local_copy
	patch -p1 < ../../../packages/${PACKAGE_NAME}-${VER}/audacity-env-tag.patch
	./configure --prefix=$PREFIX 
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build
	pkg_install_make && pkg_install_bin_all
}

