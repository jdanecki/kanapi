#set -x

PACKAGE_NAME=pango
VER=1.41.0
URL="http://ftp.gnome.org/pub/gnome/sources/pango/1.41"
EXT=tar.xz
#build depends on

LIB_DEPENDS="x11 xcb xau ice"

. ../settings

export CPP="gcc -E ${CFLAGS}"

pkg_configure() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX 
}

pkg_build() {
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true V=1
}

pkg_install() {
	pkg_install_pc_all
	pkg_install_bin_all
	pkg_install_libs
}

pkg_check() {
	set
}
