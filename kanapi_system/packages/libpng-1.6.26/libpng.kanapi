PACKAGE_NAME=libpng
VER=1.6.26
URL="SF"
EXT=tar.xz
SF_URL="libpng/libpng16/${VER}/${PACKAGE_NAME}-${VER}.${EXT}"
LIB_DEPENDS=zlib

. ../settings

export INCLUDES="`pkg-config --cflags zlib`"

pkg_download() {
	pkg_curl
}

pkg_prepare() {
	pkg_tar_xz
}

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} 
}

pkg_install() {
	pkg_install_pc_all
	pkg_install_libs
	pkg_install_bin_all
	
}

