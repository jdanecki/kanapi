PACKAGE_NAME=libxml2
VER=2.9.4
URL=" ftp://xmlsoft.org/XSLT"
EXT=tar.gz
#build depends on

LIB_DEPENDS="liblzma"

. ../settings

export LDFLAGS="${LDFLAGS} -lpthread"

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX \
		--with-python=${KANAPI_BASE}/Python-${Python_ver}
}

pkg_install() {
	pkg_install_all
}

