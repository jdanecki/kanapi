PACKAGE_NAME=tk
VER=8.6.6
URL="http://prdownloads.sourceforge.net/tcl"
EXT=tar.gz
#build depends on

LIB_DEPENDS="xt x11 xft xext fontconfig"

. ../settings

export LDFLAGS="${LDFLAGS} -lm -lpthread -lrt"
if [ -n "${PKG_CONFIG}" ]
then
	export CPP="gcc -E `${PKG_CONFIG} --cflags xt`"
fi

pkg_download() {
	PACKAGE_VER="${PACKAGE_NAME}${VER}-src"
	PACKAGE_FILENAME=${PACKAGE_VER}.${EXT}
	PACKAGE_PATH=${PACKAGE_FILENAME}
	
	pkg_curl
}

pkg_prepare() {
	if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ] 
	then 
		echo "$PACKAGE_NAME: already prepared"
	else
		tar -xzf ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}${VER}-src.${EXT} -C ${KANAPI_BUILD_SRC}
		/bin/date > ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
	fi
	${LN_SNF} ${PACKAGE_NAME}${VER} ${PACKAGE_SRCDIR}
}

pkg_configure_target() {	
	${PACKAGE_SRCDIR}/unix/configure --prefix=$PREFIX  --with-x \
		--with-tcl=`${PKG_CONFIG} --variable=libdir tcl`
}

pkg_install() {
	pkg_install_pc_all
	${LN_SF} ${PREFIX}/bin/wish8.6 ${PREFIX}/bin/wish
	pkg_install_bin_all
	pkg_install_libs
	${LN_SF} ${PREFIX}/lib/tk8.6 ${KANAPI_BASE}/tcl-${tcl_ver}/lib

}
		
pkg_check() {
	${PKG_CONFIG} --variable=libdir tcl
}


