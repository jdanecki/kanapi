PACKAGE_NAME=st
VER=0.7
URL="http://git.suckless.org/st/snapshot"
EXT=tar.bz2
#build depends on

LIB_DEPENDS="x11 fontconfig freetype2 xft xproto xcb xau libpng zlib expat xrender"
. ../settings

export LDFLAGS="${LDFLAGS} -lm -lpthread -lutil"

pkg_configure() {
	local_copy
}

pkg_build() {
	cd build
	${MAKE} config.h
	gcc ${CFLAGS} ${LDFLAGS} -o st -DVERSION=\"${VER}\" -D_XOPEN_SOURCE=600 -std=c99 st.c
}

pkg_install() {
	cd build
        mkdir -p ${PREFIX}/bin
        cp -v st ${PREFIX}/bin
	pkg_install_bin_all
	${KANAPI_BASE}/ncurses5-${ncurses5_ver}/bin/tic -sx st.info
}

pkg_check() {
	echo "${CFLAGS}"
}

