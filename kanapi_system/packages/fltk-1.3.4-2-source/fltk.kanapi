PACKAGE_NAME=fltk
VER=1.3.4-2-source
URL="http://fltk.org/pub/fltk/1.3.4"
EXT=tar.gz
#build depends on
LIB_DEPENDS="x11 gl"

. ../settings

export LDFLAGS="${LDFLAGS} -lm -lpthread"
export CXXFLAGS="${CFLAGS} "
export CPP="gcc -E ${CFLAGS}"

pkg_configure() {
	${LN_SNF} ${PACKAGE_NAME}-1.3.4-2 ${PACKAGE_SRCDIR}
	local_copy
	./configure --prefix=$PREFIX 
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build
	pkg_install_make && pkg_install_bin_all && pkg_install_libs && ${LN_SF} ${PREFIX}/include/FL ${PREFIX}/include/Fl
}

