PACKAGE_NAME=gcc
VER=7.2.0
#URL="ftp://ftp.gnu.org/pub/gnu/gcc/gcc-${VER}"
URL="http://ftp.gnu.org/pub/gnu/gcc/gcc-${VER}"
EXT=tar.xz
#build depends on
. ../settings

pkg_prepare() {
	pkg_tar_xz
	mkdir -p ${PREFIX}/x86_64-unknown-linux-gnu/lib
	mkdir -p ${PREFIX}/x86_64-unknown-linux-gnu/include
	mkdir -p ${PREFIX}/x86_64-unknown-linux-gnu/sys-include
	${LN_SF} ${KANAPI_BASE}/glibc-${glibc_ver}/lib/*     ${PREFIX}/x86_64-unknown-linux-gnu/lib
	${LN_SF} ${KANAPI_BASE}/glibc-${glibc_ver}/include/* ${PREFIX}/x86_64-unknown-linux-gnu/include
	${LN_SF} ${KANAPI_BASE}/glibc-${glibc_ver}/include/* ${PREFIX}/x86_64-unknown-linux-gnu/sys-include
}

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --disable-bootstrap --disable-multilib \
	--disable-libada  --enable-languages="c c++" \
	--with-mpc=${KANAPI_BASE}/mpc-${mpc_ver} --with-mpfr=${KANAPI_BASE}/mpfr-${mpfr_ver} --with-gmp=${KANAPI_BASE}/gmp-${gmp_ver} \
	--prefix=${PREFIX} --disable-nls --enable-decimal-float \
	--disable-libmudflap --disable-libquadmath --disable-target-libiberty \
	--disable-target-zlib --without-ppl --disable-cloog --without-cloog --disable-libssp \
	--with-native-system-header-dir=${KANAPI_BASE}/glibc-${glibc_ver}/include \
	--disable-static --enable-__cxa_atexit --enable-threads=posix --enable-libstdcxx-time
}

pkg_build() {
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true 
}

pkg_install() {
	MAKE_JOBS=1
	${MAKE} -j ${MAKE_JOBS}  MAKEINFO=true install

	${LN_SF} ${KANAPI_BASE}/binutils-${binutils_ver}/bin/as ${PREFIX}/libexec/gcc/x86_64-unknown-linux-gnu/${gcc_ver}/as
	${LN_SF} ${KANAPI_BASE}/binutils-${binutils_ver}/bin/ld ${PREFIX}/libexec/gcc/x86_64-unknown-linux-gnu/${gcc_ver}/ld

	${LN_SF} ${PREFIX}/bin/gcc ${PREFIX}/bin/cc

	LINKER_NAME=ld-linux-x86-64.so.2
	echo "updating spec to ${LINKER_NAME} in ${PREFIX}/lib/gcc/x86_64-unknown-linux-gnu/${gcc_ver}/specs"
	${PREFIX}/bin/gcc -dumpspecs | sed "s@/lib64/ld-linux-x86-64.so.2@${LIBC_PREFIX}/lib/ld-linux-x86-64.so.2@g" \
		> ${PREFIX}/lib/gcc/x86_64-unknown-linux-gnu/${gcc_ver}/specs
	
	pkg_install_bin_all

	echo "${PREFIX}/lib64" >> ${LIBC_PREFIX}/etc/ld.so.conf
	if [ "`id -u`" = "0" ]
	then
		export LD_LIBRARY_PATH=
		ldconfig
	fi
	for i in ${PREFIX}/bin/*
	do
		patchelf --set-interpreter ${LIBC_PREFIX}/lib/ld-linux-x86-64.so.2 $i
	done

	for i in cc1 cc1plus collect2 lto-wrapper lto1
	do
		patchelf --set-interpreter ${LIBC_PREFIX}/lib/ld-linux-x86-64.so.2 ${PREFIX}/libexec/gcc/x86_64-unknown-linux-gnu/${VER}/$i
	done
}

pkg_check() {
	echo "HOST=`uname -m`"
	echo "PATH=$PATH"
	gcc --version
	echo "CPP=${CPP}"
}

