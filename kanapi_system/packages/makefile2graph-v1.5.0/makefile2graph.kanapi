PACKAGE_NAME=makefile2graph
VER=v1.5.0
URL="git@github.com:lindenb"
EXT="git"
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	pkg_git_clone
}

pkg_prepare() {
	pkg_git_checkout
}

pkg_configure() {	
	local_copy
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} prefix=${PREFIX} CC="${KANAPI_TARGET_NAME}-gcc"
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} prefix=${PREFIX} install
	pkg_install_bin_all
}

