PACKAGE_NAME=dconf
VER=0.26.0
URL="http://ftp.acc.umu.se/pub/gnome/sources/dconf/0.26"
EXT=tar.xz
#build depends on
LIB_DEPENDS="gio-2.0 gmodule-2.0 zlib libffi"

. ../settings

export LDFLAGS="${LDFLAGS} -lresolv"
#export CFLAGS="${CFLAGS} "

pkg_configure_target() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX  \
	--disable-man
}
pkg_install() {
	pkg_install_pc_all
	pkg_install_bin_all
	pkg_install_libs
}

