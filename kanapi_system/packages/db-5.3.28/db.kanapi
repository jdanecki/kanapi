PACKAGE_NAME=db
VER=5.3.28
URL="http://download.oracle.com/berkeley-db"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	local_copy
	cd build_unix
    ../dist/configure --prefix=${PREFIX} \
    --enable-compat185 --enable-shared --enable-static --enable-cxx
}

pkg_build () {
	cd build/build_unix
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
	cd build/build_unix
	pkg_install_make_bin_all && pkg_install_libs
}

