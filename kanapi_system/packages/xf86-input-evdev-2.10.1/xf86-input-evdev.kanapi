PACKAGE_NAME=xf86-input-evdev
VER=2.10.1
URL="http://xorg.freedesktop.org/releases/individual/driver"
EXT=tar.bz2
#build depends on libevdev mtdev libudev
LIB_DEPENDS="mtdev libudev"

. ../settings

export LIBS="-lpthread"

pkg_install() {
	pkg_install_pc_all
	ln -svf ${PREFIX}/lib/xorg/modules/input/* ${KANAPI_BASE}/xorg-server-${xorg_server_ver}/lib/xorg/modules/input
	ln -svf ${PREFIX}/share/X11/xorg.conf.d/10-evdev.conf ${KANAPI_BASE}/xorg-server-${xorg_server_ver}/share/X11/xorg.conf.d
}	

