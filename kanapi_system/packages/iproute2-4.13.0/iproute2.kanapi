PACKAGE_NAME=iproute2
VER=4.13.0
URL="https://www.kernel.org/pub/linux/utils/net/iproute2"
EXT=tar.xz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	pkg_configure_local
}


pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true PREFIX=${PREFIX} SBINDIR=${PREFIX}/bin CONFDIR=${PREFIX}/etc KERNEL_INCLUDE=${PREFIX}/usr/include
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true PREFIX=${PREFIX} SBINDIR=${PREFIX}/bin CONFDIR=${PREFIX}/etc KERNEL_INCLUDE=${PREFIX}/usr/include \
		&&	pkg_install_bin_all
}

