PACKAGE_NAME=findutils
VER=4.6.0
URL="GNU"
EXT=tar.gz
#build depends on
. ../settings

pkg_configure_target() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX \
 	--without-selinux --disable-nls
	RESULT=$? 
	pkg_rm_docker_wa
	return $RESULT
}

pkg_install() {
	pkg_install_make && pkg_install_bin_all && \
	rm -rf ${PREFIX}/share/{man,info}
}

