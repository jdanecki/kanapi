PACKAGE_NAME=flex
VER=2.6.4
URL="https://github.com/westes/flex/releases/download/v2.6.4"
EXT=tar.gz
#build depends on
. ../settings

pkg_configure() {
		${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --disable-nls
}

pkg_build() {
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
		pkg_install_make && pkg_install_bin_all && pkg_install_libs && \
		rm -rf ${PREFIX}/share/{man,doc,info}
}

