PACKAGE_NAME=libgcrypt
VER=1.7.3
URL="ftp://ftp.gnupg.org/gcrypt/libgcrypt"
EXT=tar.bz2
#build depends on
. ../settings

pkg_prepare() {
	pkg_tar_bz2
}

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} ac_cv_sys_symbol_underscore=no \
	--with-libgpg-error-prefix=`gpg-error-config --prefix` CC_FOR_BUILD=gcc
}

pkg_check() {
	gpg-error-config --cflags
	gpg-error-config --libs
	gpg-error-config --prefix
}

pkg_install() {
	make -j ${MAKE_JOBS} install MAKEINFO=true
	pkg_install_libs
	pkg_install_bin_all
}
