PACKAGE_NAME=cgroupfs-mount
VER=1.4
URL="https://github.com/tianon/cgroupfs-mount/archive"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
