pkg_download() {
	PACKAGE_PATH=${VER}.${EXT}
	pkg_curl	
}

pkg_configure() {
	local_copy
}

pkg_build() {
	echo "nothing to do"
}

pkg_install() {
	mkdir -p ${PREFIX}/bin
	cp build/cgroupfs-mount ${PREFIX}/bin
	cp build/cgroupfs-umount ${PREFIX}/bin
	pkg_install_bin_all
}

