VER=0.23.2
URL="https://p11-glue.freedesktop.org/releases"
EXT=tar.gz
#build depends on
. ../settings

pkg_configure() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX  \
	--without-libtasn1
}

pkg_install() {
	pkg_install_pc_all
