PACKAGE_NAME=rakarrack
VER=0.6.1
URL="http://downloads.sourceforge.net/${PACKAGE_NAME}"
EXT=tar.bz2
#build depends on
LIB_DEPENDS="libpng14"

. ../settings

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX  
}

pkg_install() {
	mkdir -p /usr/local/share
	pkg_install_make && pkg_install_bin_all && ${LN_SF} ${PREFIX}/share/${PACKAGE_NAME} /usr/local/share/${PACKAGE_NAME}
}

