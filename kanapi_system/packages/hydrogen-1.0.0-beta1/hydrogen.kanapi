PACKAGE_NAME=hydrogen
VER=1.0.0-beta1
URL="https://github.com/hydrogen-music/hydrogen/archive"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "
export CMAKE_PREFIX_PATH=${KANAPI_BASE}/qt-everywhere-opensource-src-${qt_everywhere_opensource_src_ver}/lib/cmake

pkg_download() {
	PACKAGE_FILENAME=${PACKAGE_NAME}-${VER}.${EXT}
	PACKAGE_PATH=${VER}.${EXT}
	
	pkg_curl
}

pkg_configure() {
	cmake -G Ninja ${PACKAGE_SRCDIR} -DCMAKE_INSTALL_PREFIX=${PREFIX} -DCMAKE_BUILD_TYPE=Release
}

pkg_build() {
	ninja -j ${MAKE_JOBS}
}

pkg_install() {
	ninja install && pkg_install_bin_all && pkg_install_libs
}


