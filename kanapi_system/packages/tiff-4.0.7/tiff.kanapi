PACKAGE_NAME=tiff
VER=4.0.7
URL="http://download.osgeo.org/libtiff"
EXT=tar.gz

. ../settings

export CFLAGS="`pkg-config --cflags zlib`"
export LDFLAGS="`pkg-config --libs zlib`"

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX
}

pkg_install() {
	pkg_install_pc_all && pkg_install_libs && pkg_install_bin_all
}


