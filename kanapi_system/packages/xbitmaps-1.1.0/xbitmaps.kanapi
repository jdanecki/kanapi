PACKAGE_NAME=xbitmaps
VER=1.1.0
URL="http://xorg.freedesktop.org/releases/individual/app"
EXT=tar.bz2
#build depends on
. ../settings

pkg_install() {
	pkg_install_pc_all
	XMU=`${PKG_CONFIG} --variable=includedir xmu`
	if [ ! -d ${XMU}/X11/bitmaps ] ; then mkdir -p ${XMU}/X11/bitmaps ; fi
	ln -svf ${PREFIX}/include/X11/bitmaps/* ${XMU}/X11/bitmaps
}

