PACKAGE_NAME=swig
VER=3.0.11
URL="SF"
EXT=tar.gz
SF_URL="swig/swig/swig-${VER}/swig-${VER}.${EXT}"
#build depends on
LIB_DEPENDS="zlib tcl tk libpcre"

. ../settings

export LDFLAGS="${LDFLAGS} -lpthread -lm -lrt"
#export CFLAGS="${CFLAGS} "

pkg_configure() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX \
	--with-tclincl="`${PKG_CONFIG} --variable=includedir tcl`" \
	--with-tcllib="`${PKG_CONFIG} --variable=libdir tcl`" \
	--with-tclconfig="`${PKG_CONFIG} --variable=libdir tcl`"
}

pkg_install() {
	pkg_install_make_bin_all
}

pkg_check() {
	${PKG_CONFIG} --libs ${LIB_DEPENDS}
}
