PACKAGE_NAME=jack2
VER=1.9.11-RC1
URL="https://github.com/jackaudio/jack2/releases/download/v1.9.11-RC1"
EXT=tar.gz
#build depends on
LIB_DEPENDS="ncurses"

. ../settings

export LDFLAGS="-lreadline ${LDFLAGS} -lstdc++ -L${KANAPI_BASE}/readline-${readline_ver}/lib -lm"
export CFLAGS="${CFLAGS} -I${KANAPI_BASE}/readline-${readline_ver}/include"

pkg_configure() {
	local_copy
	python waf configure --prefix=${PREFIX} --alsa --readline=yes
}

pkg_build() {
	cd  build
	python waf build
}

pkg_install() {
	cd build
	python waf install && pkg_install_bin_all && pkg_install_libs && pkg_install_pc_all_only
}

