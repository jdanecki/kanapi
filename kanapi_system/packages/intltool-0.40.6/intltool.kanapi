PACKAGE_NAME=intltool
VER=0.40.6
URL="http://ftp.acc.umu.se/pub/gnome/sources/intltool/0.40/"
EXT=tar.bz2
#build depends on
. ../settings

export PERL5LIB="${KANAPI_BASE}/XML-Parser-${XML_Parser_ver}/lib/site_perl/${perl_ver}"

pkg_prepare() {
	if [ ${KANAPI_CROSS} -eq 0 ]
	then
		pkg_tar_bz2
	fi
}

pkg_configure() {
	if [ ${KANAPI_CROSS} -eq 0 ]
	then
		${PACKAGE_SRCDIR}/configure --prefix=$PREFIX  
	fi
}

pkg_build () {
	if [ ${KANAPI_CROSS} -eq 0 ]
	then
		${MAKE} -j ${MAKE_JOBS}
	fi
}

pkg_install() {
	if [ ${KANAPI_CROSS} -eq 0 ]
	then
		pkg_install_make
		pkg_install_bin_all
	fi
}

